#!/bin/bash
BASEDIR=`dirname $0`

if [ "$#" -lt 3 ]
then
	echo "Usage $0 PROPERTIES_FILE SECRET_RESERVATION_KEYS CONFIG_FILE [lines|csv] [NODEURNS]"
	echo "Example: $0 live.properties urn:wisebed:uzl1:,D2C88AEE416EDD2FD4038BC1252A8900 handlerchain.xml csv urn:wisebed:uzl1:0xcc3d,urn:wisebed:uzl1:0xcc3e"
	echo "'lines' is the default output type"
	exit 1
fi

java \
 -Dtestbed.secretreservationkeys=$2 \
 -Dtestbed.configfile=$3 \
 -Dtestbed.listtype=$4 \
 -Dtestbed.nodeurns=$5 \
 -jar $BASEDIR/../lib/tr.scripting-client-${project.version}-onejar.jar \
 -p $1 \
 -f $BASEDIR/../scripts/wb-set-channel-pipeline.java
