#!/bin/bash
BASEDIR=`dirname $0`

if [ "$#" -lt 3 ]
then
	echo "Usage $0 PROPERTIES_FILE SECRET_RESERVATION_KEYS MESSAGE [NODEURNS]"
	echo "Example: $0 live.properties urn:wisebed:uzl1:,D2C88AEE416EDD2FD4038BC1252A8900 0x0A,0x1B,0b11001001,40,40,0b11001001,0x1F urn:wisebed:uzl1:0xcc3d,urn:wisebed:uzl1:0xcc3e"
	echo "Hint: MESSAGE consists of comma-separated bytes in base_10 (no prefix), base_2 (prefix 0b) or base_16 (prefix 0x)"
	exit 1
fi

java -Dtestbed.secretreservationkeys=$2 -Dtestbed.message=$3 -Dtestbed.nodeurns=$4 -jar $BASEDIR/../lib/tr.scripting-client-${project.version}-onejar.jar -p $1 -f $BASEDIR/../scripts/send.java -v
